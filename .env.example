# ============================================================================
# CONFIGURACIÃ“N DE AMBIENTE - Core Banking System (EJEMPLO)
# ============================================================================
# Copia este archivo a .env y completa con tus valores reales
# ============================================================================

# ============================================================================
# POSTGRESQL DATABASE
# ============================================================================
DB_NAME=core_banking_db
DB_USER=banking_user
DB_PASSWORD=your_secure_password_here
DB_PORT=5432

# ============================================================================
# SPRING BOOT APPLICATION
# ============================================================================
APP_PORT=8080
SPRING_PROFILE=dev

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
# IMPORTANTE: Genera un secreto seguro con: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRATION_MS=86400000

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# ============================================================================
# PGADMIN (Opcional)
# ============================================================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=your_pgadmin_password
PGADMIN_PORT=5050

# ============================================================================
# REDIS (para Rate Limiting)
# ============================================================================
# En Docker Compose, el host es 'redis' (nombre del servicio)
# En local, usa 'localhost'
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=

