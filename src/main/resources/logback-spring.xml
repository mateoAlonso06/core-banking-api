<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Include Spring Boot defaults -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Property for correlation ID pattern -->
    <property name="CORRELATION_PATTERN" value="[%X{correlationId:-NO-CORRELATION-ID}]"/>

    <!-- Properties from Spring config -->
    <springProperty scope="context" name="LOKI_URL" source="loki.url" defaultValue="http://localhost:3100/loki/api/v1/push"/>
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="core-bank"/>

    <!-- ================================================================ -->
    <!-- Dev/Default WITHOUT observability: human-readable console only   -->
    <!-- ================================================================ -->
    <springProfile name="(dev | default) &amp; !observability">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%cyan(%d{yyyy-MM-dd HH:mm:ss.SSS}) %green(${CORRELATION_PATTERN}) %magenta([%X{traceId:-},%X{spanId:-}]) %highlight(%-5level) %cyan(%logger{36}) %gray(-) %msg%n</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
    </springProfile>

    <!-- ================================================================ -->
    <!-- Dev/Default WITH observability: console + Loki                   -->
    <!-- ================================================================ -->
    <springProfile name="(dev | default) &amp; observability">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%cyan(%d{yyyy-MM-dd HH:mm:ss.SSS}) %green(${CORRELATION_PATTERN}) %magenta([%X{traceId:-},%X{spanId:-}]) %highlight(%-5level) %cyan(%logger{36}) %gray(-) %msg%n</pattern>
            </encoder>
        </appender>

        <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
            <http>
                <url>${LOKI_URL}</url>
            </http>
            <format>
                <label>
                    <pattern>app=${APP_NAME},host=${HOSTNAME},level=%level,profile=dev</pattern>
                </label>
                <message>
                    <pattern>{"timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}","level":"%level","thread":"%thread","logger":"%logger{36}","message":"%msg","correlationId":"%X{correlationId:-NO-ID}","traceId":"%X{traceId:-}","spanId":"%X{spanId:-}"}</pattern>
                </message>
            </format>
            <dropRateLimitedEvents>true</dropRateLimitedEvents>
        </appender>

        <appender name="ASYNC_LOKI" class="ch.qos.logback.classic.AsyncAppender">
            <appender-ref ref="LOKI"/>
            <neverBlock>true</neverBlock>
            <queueSize>512</queueSize>
            <discardingThreshold>0</discardingThreshold>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_LOKI"/>
        </root>

        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
        <logger name="com.github.loki4j" level="ERROR"/>
        <logger name="zipkin2.reporter" level="ERROR"/>
    </springProfile>

    <!-- ================================================================ -->
    <!-- Prod WITHOUT observability: JSON console only                    -->
    <!-- ================================================================ -->
    <springProfile name="prod &amp; !observability">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>{"timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}","correlationId":"%X{correlationId:-NO-ID}","traceId":"%X{traceId:-}","spanId":"%X{spanId:-}","level":"%-5level","logger":"%logger{36}","message":"%msg"}%n</pattern>
            </encoder>
        </appender>

        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
        </root>

        <logger name="com.banking.system" level="INFO"/>
        <logger name="org.hibernate.SQL" level="WARN"/>
    </springProfile>

    <!-- ================================================================ -->
    <!-- Prod WITH observability: JSON console + Loki                     -->
    <!-- ================================================================ -->
    <springProfile name="prod &amp; observability">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>{"timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}","correlationId":"%X{correlationId:-NO-ID}","traceId":"%X{traceId:-}","spanId":"%X{spanId:-}","level":"%-5level","logger":"%logger{36}","message":"%msg"}%n</pattern>
            </encoder>
        </appender>

        <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
            <http>
                <url>${LOKI_URL}</url>
            </http>
            <format>
                <label>
                    <pattern>app=${APP_NAME},host=${HOSTNAME},level=%level,profile=prod</pattern>
                </label>
                <message>
                    <pattern>{"timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}","level":"%level","thread":"%thread","logger":"%logger{36}","message":"%msg","correlationId":"%X{correlationId:-NO-ID}","traceId":"%X{traceId:-}","spanId":"%X{spanId:-}"}</pattern>
                </message>
            </format>
            <dropRateLimitedEvents>true</dropRateLimitedEvents>
        </appender>

        <appender name="ASYNC_LOKI" class="ch.qos.logback.classic.AsyncAppender">
            <appender-ref ref="LOKI"/>
            <neverBlock>true</neverBlock>
            <queueSize>512</queueSize>
            <discardingThreshold>0</discardingThreshold>
        </appender>

        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_LOKI"/>
        </root>

        <logger name="com.banking.system" level="INFO"/>
        <logger name="org.hibernate.SQL" level="WARN"/>
        <logger name="com.github.loki4j" level="ERROR"/>
        <logger name="zipkin2.reporter" level="ERROR"/>
    </springProfile>

</configuration>